
.content {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
}
.logo {
		height: 200rpx;
		width: 200rpx;
		margin-top: 200rpx;
		margin-left: auto;
		margin-right: auto;
		margin-bottom: 50rpx;
}
.text-area {
		display: flex;
		justify-content: center;
}
.title {
		font-size: 36rpx;
		color: #8f8f94;
}
.button-group {
		margin-top: 50rpx;
		display: flex;
		flex-direction: column;
		gap: 20rpx;
}
.training-btn {
		width: 300rpx;
		background-color: #007AFF;
		color: #FFFFFF;
		border-radius: 10rpx;
		display: flex;
		align-items: center;
		justify-content: center;
}
.btn-icon {
		width: 40rpx;
		height: 40rpx;
		margin-right: 10rpx;
}
